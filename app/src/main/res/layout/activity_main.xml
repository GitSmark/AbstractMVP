<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/constraint_layout"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/constraint_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="The AbstractMVP sample, get it now!"
        android:textSize="22sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/constraint_btn1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:textColor="@color/colorWhite"
        android:background="@color/colorPrimary"
        app:layout_constraintStart_toStartOf="@id/constraint_tv"
        app:layout_constraintTop_toBottomOf="@id/constraint_tv"
        android:text="LOGIN STYLE 1"
        android:visibility="gone"/>

    <Button
        android:id="@+id/constraint_btn2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:textColor="@color/colorWhite"
        android:background="@color/colorPrimary"
        app:layout_constraintStart_toStartOf="@id/constraint_tv"
        app:layout_constraintTop_toBottomOf="@id/constraint_btn1"
        android:text="LOGIN STYLE 2"
        android:visibility="gone"/>

</androidx.constraintlayout.widget.ConstraintLayout>